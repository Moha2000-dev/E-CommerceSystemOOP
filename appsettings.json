{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=(local);Initial Catalog=E-CommerceSystem;Integrated Security=True;TrustServerCertificate=True"
  },
  "JwtSettings": {
    "SecretKey": "MySecretKey@2025MySecretKey@2025MySecretKey@2025", // Replace with a secure key
    "ExpiryInMinutes": 30
  },
  "AllowedHosts": "*",


  "Smtp": {
    "Host": "smtp.example.com",
    "Port": 587,
    "User": "apikey_or_username",
    "Password": "secret",
    "From": "no-reply@shop.local",
    "FromName": "E-Commerce"
  },
  "Jwt": {
    "Key": "your-long-secret-key-here",
    "Issuer": "ECommerce",
    "Audience": "ECommerceClients",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 7
  }


}
